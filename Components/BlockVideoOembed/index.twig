<flynt-component 
  load:on="visible" 
  name="BlockVideoOembed" 
  class="" 
  style="
    color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};
    background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <div>
    <div class="video" data-video-size="{{ options.size }}">
      {# {% include 'Partials/_figure.twig' ignore missing with {image: posterImage} only %} #}
      <div data-ref="videoPlayer" class="video-player w-full mx-auto" data-state="isLoaded">
        {{ oembed }}
        <div class="video-loader"></div>
        <button data-ref="playButton" class="video-playButton" type="button" aria-label="Play Video"></button>
      </div>
    </div>
  </div>
</flynt-component>
