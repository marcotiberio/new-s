<flynt-component
  load:on="idle" name="GridVideos"
  class=""
  style="
    color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};
    background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};"
  >
  <script type="application/json">{{ jsonData|json_encode }}</script>
  <div class="wrapper w-screen mx-auto boxed flex flex-col gap-sm">
    <div class="w-full max-w-screen-max mx-auto flex flex-col md:flex-row {% if buttonLink %} justify-between {% else %} justify-start {% endif %} items-start gap-sm md:gap-xxl">
      {% if title %}
        <div class="h2 w-full max-w-[450px]">{{ title }}</div>
      {% endif %}
      {% if contentHtml %}
        <div class="wysiwyg [&_*]:mb-0 w-full max-w-[450px]">{{ contentHtml|e('wp_kses_post') }}</div>
      {% endif %}
      {% if buttonLink %}
        <a 
          class="button button--outline" 
          href="{{ buttonLink.url }}" 
          {% if buttonLink.target %} target="{{ buttonLink.target }}" rel="noreferrer noopener"{% endif %}>
          {{ buttonLink.title }}
        </a>
      {% endif %}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-sm">
      {% if videoFile1 %}
        <video 
          class="w-full h-full" 
          controls 
          {# autoplay 
          muted 
          loop 
          playsinline #}
          preload="auto" />
          <source type="video/mp4" src="{{ videoFile1 }}">
        </video>
      {% endif %}
      {% if videoFile2 %}
        <video 
          class="w-full h-full" 
          controls 
          {# autoplay 
          muted 
          loop 
          playsinline #}
          preload="auto" />
          <source type="video/mp4" src="{{ videoFile2 }}">
        </video>
      {% endif %}
      {% if videoFile3 %}
        <video 
          class="w-full h-full" 
          controls 
          {# autoplay 
          muted 
          loop 
          playsinline #}
          preload="auto" />
          <source type="video/mp4" src="{{ videoFile3 }}">
        </video>
      {% endif %}
    </div>

    {# <div class="flex flex-col gap-sm justify-center">
      {% if introLogosHtml %}
        <div class="wysiwyg [&_*]:mb-0 w-full md:w-1/2 mx-auto">{{ introLogosHtml|e('wp_kses_post') }}</div>
      {% endif %}
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-xl">
        {% for item in repeaterLogos %}
          <div class="item w-full flex justify-center">
            <img class="figure-image lazyload w-full max-w-[200px] h-full object-contain"
