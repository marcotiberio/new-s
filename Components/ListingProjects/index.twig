<flynt-component 
  load:on="visible" 
  name="ListingProjects" 
  class=""
  style="
    color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};
    background-color: {% if options.pageBackground %}{{ options.pageBackground }}{% else %}transparent{% endif %};">

  <div class="wrapper max-w-screen-max mx-auto boxed flex flex-col gap-sm" x-data="{ selectedCategory: '', searchQuery: '', filtersOpen: false }">
    <div class="grid grid-cols-12 gap-xs">
      
      <div class="flex flex-col flex-wrap justify-start col-start-7 col-end-12">
        
        <!-- All Category Filter -->
        <div 
          class="font-body !mb-0 cursor-pointer hover:text-orange w-fit"
          :class="selectedCategory === '' ? 'text-orange' : ''"
          @click="selectedCategory = ''">
          All
        </div>
        
        {% set projektCategories = function('get_terms', {'taxonomy': 'category', 'hide_empty': true}) %}
        {% for projektCategory in projektCategories %}
          {% set slug = projektCategory.name|lower|replace({' ' : '-'}) %}
          <div 
            class="font-body !mb-0 cursor-pointer hover:text-orange w-fit"
            :class="selectedCategory === '{{ slug }}' ? 'text-orange' : ''"
            @click="selectedCategory = '{{ slug }}'">
            {{ projektCategory.name }}
          </div>
        {% endfor %}
      </div>            
    </div>

    <!-- Posts Grid -->
    <div class="">
      <div class="flex flex-wrap flex-row gap-xs">
        {% for item in projects %}
          {% set project = item.project %}
          {% set projektCategoryTerms = project.terms('category') %}
          {% set postCategorySlugs = projektCategoryTerms|map(term => term.name|lower|replace({' ' : '-'}) ) %}
          <div 
            class="post {{ item.width }} hover:cursor-pointer" 
            x-show="(selectedCategory === '' || ['{{ postCategorySlugs|join("','") }}'].includes(selectedCategory)) && 
                     (searchQuery === '' || '{{ project.title|lower }}'.includes(searchQuery.toLowerCase()))"
            x-transition:enter="transition ease-out duration-100"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-100"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
          >
            <a class="flex flex-col gap-xs w-full no-underline" href="{{ project.link }}">
              {% if project.featVideo %}
                <video class="figure-video object-cover md:!h-[525px]"
                  autoplay 
                  muted 
                  loop 
                  playsinline 
                  preload="metadata"
                  src="{{ project.featVideo.url }}"
                  style="width:100%;height:auto;">
                  Your browser does not support the video tag.
                </video>
              {% elseif project.featVideoEmbed %}
                <div class="video-wrapper w-full h-full">
                  <div data-ref="videoPlayer" class="video-player w-full mx-auto" data-state="isLoaded">
                    {{ project.featVideoEmbed }}
                    <div class="video-loader"></div>
                    <button data-ref="playButton" class="video-playButton" type="button" aria-label="Play Video"></button>
                  </div>
                </div>
              {% elseif project.featImageAlt %}
                <img class="figure-image lazyload object-cover md:h-[525px] aspect-8/5"
                  src="{{ project.featImageAlt.src|resizeDynamic(32, 24) }}"
                  data-srcset="
                  {{ project.featImageAlt.src|resizeDynamic(3840, 2160) }} 3840w,
                  {{ project.featImageAlt.src|resizeDynamic(2560, 1440) }} 2560w,
                  {{ project.featImageAlt.src|resizeDynamic(1920, 1080) }} 1920w,
                  {{ project.featImageAlt.src|resizeDynamic(1440, 810) }} 1440w,
                  {{ project.featImageAlt.src|resizeDynamic(1024, 576) }} 1024w,
                  {{ project.featImageAlt.src|resizeDynamic(768, 432) }} 768w,
                  {{ project.featImageAlt.src|resizeDynamic(375, 211) }} 375w"
                  data-sizes="auto"
                  alt="{{ project.featImageAlt.alt|e }}">
              {% else %}
                <img class="figure-image lazyload object-cover md:h-[525px] aspect-8/5"
                  src="{{ project.thumbnail.src|resizeDynamic(32, 24) }}"
                  data-srcset="
                  {{ project.thumbnail.src|resizeDynamic(3840, 2160) }} 3840w,
                  {{ project.thumbnail.src|resizeDynamic(2560, 1440) }} 2560w,
                  {{ project.thumbnail.src|resizeDynamic(1920, 1080) }} 1920w,
                  {{ project.thumbnail.src|resizeDynamic(1440, 810) }} 1440w,
                  {{ project.thumbnail.src|resizeDynamic(1024, 576) }} 1024w,
                  {{ project.thumbnail.src|resizeDynamic(768, 432) }} 768w,
                  {{ project.thumbnail.src|resizeDynamic(375, 211) }} 375w"
                  data-sizes="auto"
                  alt="{{ project.thumbnail.alt|e }}">
              {% endif %}
              <div class="info flex flex-col">
                <h2 class="font-body !mb-0">{{ project.title }}</h2>
                <div class="flex flex-row gap-[5px]">
                  <span class="font-bodySmall !mb-0">{{ project.postCustomText }}</span>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</flynt-component>