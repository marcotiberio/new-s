<img class="figure-image lazyload object-cover"
    src="{{ item.image.src|resizeDynamic(32, 24) }}"
    data-srcset="
    {{ item.image.src|resizeDynamic(3840, 2160) }} 3840w,
    {{ item.image.src|resizeDynamic(2560, 1440) }} 2560w,
    {{ item.image.src|resizeDynamic(1920, 1080) }} 1920w,
    {{ item.image.src|resizeDynamic(1440, 810) }} 1440w,
    {{ item.image.src|resizeDynamic(1024, 576) }} 1024w,
    {{ item.image.src|resizeDynamic(768, 432) }} 768w,
    {{ item.image.src|resizeDynamic(375, 211) }} 375w"
    data-sizes="auto"
    alt="{{ item.image.alt|e }}">
