      </div>
      <div class="swiper-wrapper w-full h-full items-center">
        {% for item in logos %}
          <div class="slider-item swiper-slide w-full h-full flex items-center justify-center">
            <img class="lazyload w-full max-w-[100px] h-full object-cover relative"
              src="{{ item.logo.src | resize(32) }}"
              data-srcset="{{function('wp_get_attachment_image_srcset', item.logo.id)}}"
