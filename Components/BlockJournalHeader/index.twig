<flynt-component 
  load:on="visible" name="BlockJournalHeader" 
  class="w-full mx-auto flex flex-col justify-between items-center">
  <div class="w-full">
    <div class="flex flex-col h-full relative">
      <div class="w-full lg:w-full h-full flex flex-col justify-between">
        <div class="grid md:grid-cols-12 gap-xs">
          <div class="w-full md:col-span-3 flex flex-col justify-start gap-xs h-fit md:sticky md:top-[91px]">
            {# <div class="">
              {% set postCategories = post.terms('category') %}
              {% for term in postCategories %}
                <span class="font-bodySmall">{{ term }}{% if not loop.last %},{% endif %}</span>
              {% endfor %}
            </div> #}
            <div class="grid grid-cols-3 justify-between items-center">
              <div class="font-bodySmall !mb-0 col-start-1 col-end-2">{{ post.end_date }}</div>
              <div class="font-bodySmall !mb-0 col-start-2 col-end-3">{{ post.postAuthor }}</div>
              {% set journalCategories = function('get_terms', {'taxonomy': 'journal-category', 'hide_empty': true}) %}
              {% set journalCategoryTerms = post.terms('journal-category') %}
            </div>
            <div class="font-h2 pb-sm">{{ post.title }}</div>
          </div>
          <div class="w-full md:col-span-9" style="color: {% if options.colorText %}{{ options.colorText }}{% else %}var(--black){% endif %};">
            <div class="w-full">
              {% if post.featImageAlt %}
                <img 
                  class="figure-image object-cover aspect-8/5"
                  src="{{ post.featImageAlt.src }}"
                  alt="{{ post.featImageAlt.alt|e | default('') }}"
                  loading="lazy"
                  style="opacity: 0; transition: opacity 0.5s ease-in-out;"
                  onload="this.style.opacity='1'"
                />
              {% else %}
                <img 
                  class="figure-image object-cover aspect-8/5"
                  src="{{ post.thumbnail.src }}"
                  alt="{{ post.thumbnail.alt|e | default('') }}"
                  loading="lazy"
                  style="opacity: 0; transition: opacity 0.5s ease-in-out;"
                  onload="this.style.opacity='1'"
                />
              {% endif %}
            </div>
            <div class="wysiwyg py-sm">{{ post.postContent|e('wp_kses_post') }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</flynt-component>
