<flynt-component 
  load:on="visible" 
  name="BlockWysiwygColumns"
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <div class="boxed w-full" 
    {% if options.topPadding or options.bottomPadding %}style="padding-top: {{ options.topPadding }}; padding-bottom: {{ options.bottomPadding }};"{% endif %}
    >
    <div class="grid md:grid-cols-12 gap-xs align-start justify-start md:justify-between {% if options.stickyTitle %}stickyTitle{% endif %}">
      {% for column in columns %}
        <div class="column flex {{ column.colStart }} {{ column.colEnd }} lg:row-start-1 lg:row-end-2">
          <div class="flex flex-col">
            {% if column.image %}
              <img class="figure-image lazyload w-full aspect-8/5 object-cover mb-xs"
                src="{{ column.image.src|resizeDynamic(32, 24) }}"
                data-srcset="
                {{ column.image.src|resizeDynamic(3840, 2160) }} 3840w,
                {{ column.image.src|resizeDynamic(2560, 1440) }} 2560w,
                {{ column.image.src|resizeDynamic(1920, 1080) }} 1920w,
                {{ column.image.src|resizeDynamic(1440, 810) }} 1440w,
                {{ column.image.src|resizeDynamic(1024, 576) }} 1024w,
                {{ column.image.src|resizeDynamic(768, 432) }} 768w,
                {{ column.image.src|resizeDynamic(375, 211) }} 375w"
                data-sizes="auto"
                alt="{{ column.image.alt|e }}">
            {% endif %}
            <div class="wysiwyg">{{ column.contentHtml|e('wp_kses_post') }}</div>
            {% if column.buttonLink %}
              <a 
                class="button button--outline" 
                href="{{ column.buttonLink.url }}" 
                {% if column.buttonLink.target %} target="{{ column.buttonLink.target }}" rel="noreferrer noopener"{% endif %}>
                {{ column.buttonLink.title }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</flynt-component> 