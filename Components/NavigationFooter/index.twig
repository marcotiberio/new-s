<flynt-component load:on="visible" name="NavigationFooter" class="bg-orange">
  <div class="w-full mx-auto boxed !py-sm flex flex-row justify-between items-end">
    <div class="w-full flex flex-col justify-between h-[400px] lg:h-[920px]">
      {# Top #}
      <div class="flex flex-col justify-start gap-sm">
        <div class="w-full h-full flex flex-col gap-sm justify-start">
          {% if menu %}
            <nav class="navigation w-full h-full flex justify-start md:justify-center items-end" aria-label="{{ labels.ariaLabel }}">
              {% include 'Partials/_menu.twig' with { 'items': menu.get_items, 'level': '0', 'maxLevel': maxLevel } only %}
            </nav>
          {% endif %}
        </div>
      </div>
      {# Bottom #}
      <div class="flex flex-col justify-between gap-sm">
        {% if logoFooter %}
          <figure class="figure w-full">
            <img class="lazyload w-full mx-auto object-contain"
              src="{{ logoFooter.src | resize(32) }}"
              data-srcset="{{function('wp_get_attachment_image_srcset', logoFooter.id)}}"
              data-sizes="auto"
              alt="{{ logoFooter.alt|e }}">
          </figure>
        {% endif %}
      </div>
      {# {% include 'Partials/_backtotop.twig' %} #}
    </div>
  </div>
</flynt-component>
