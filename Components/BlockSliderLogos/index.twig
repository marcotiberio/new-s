<flynt-component
  load:on="load" name="BlockSliderLogos"
  class="overflow-hidden"
  style="background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};">
  <script type="application/json">{{ jsonData|json_encode }}</script>
  <div class="boxed px-0 w-full fade-in">
    {% if blockTitle %}
      <h3 class="mb-xxl">{{ blockTitle }}</h3>
    {% endif %}

    <div class="marquee-container relative max-w-full overflow-hidden">
      <div class="marquee-track">
        <div class="marquee-content">
          {% for box in contentBoxes %}
            {% if box.panelLogo %}
              <figure class="marquee-item">
                {% if box.panelLink %}
                  <a href="{{ box.panelLink.url }}" class="" {% if box.panelLink.target %} target="{{ box.panelLink.target }}" rel="noreferrer noopener"{% endif %}>
                {% endif %}
                  <img 
                    class="logo lazyload w-full max-h-[150px] h-full object-contain aspect-square"
                    src="{{ box.panelLogo.src }}"
                    data-srcset="{{function('wp_get_attachment_image_srcset', box.panelLogo.id)}}"
                    data-sizes="auto"
                    alt="{{ box.panelLogo.alt|e }}">
                {% if box.panelLink %}
                  </a>
                {% endif %}
              </figure>
            {% endif %}
          {% endfor %}
        </div>
        <div class="marquee-content" aria-hidden="true">
          {% for box in contentBoxes %}
            {% if box.panelLogo %}
              <figure class="marquee-item">
                {% if box.panelLink %}
                  <a href="{{ box.panelLink.url }}" class="" {% if box.panelLink.target %} target="{{ box.panelLink.target }}" rel="noreferrer noopener"{% endif %}>
                {% endif %}
                  <img 
                    class="logo lazyload w-full max-h-[100px] h-full object-contain aspect-square"
                    src="{{ box.panelLogo.src }}"
                    data-srcset="{{function('wp_get_attachment_image_srcset', box.panelLogo.id)}}"
                    data-sizes="auto"
                    alt="">
                {% if box.panelLink %}
                  </a>
                {% endif %}
              </figure>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</flynt-component>
