<flynt-component load:on="visible" name="BlockImageTest2">
  <div class="w-screen h-full boxed fade-in move-up">
    <figure class="figure">
      {% if image %}
        <img 
          class="igure-image lazyload object-cover"
          src="{{ image.src }}"
          alt="{{ image.alt|e | default('') }}"
          loading="lazy"
          style="opacity: 0; transition: opacity 0.5s ease-in-out;"
          onload="this.style.opacity='1'"
        />
        {# <img class="figure-image lazyload object-cover"
          src="{{ image.src|resizeDynamic(32, 24) }}"
          data-srcset="
            {{ image.src|resizeDynamic(3840, 2160) }} 3840w,
            {{ image.src|resizeDynamic(2560, 1440) }} 2560w,
            {{ image.src|resizeDynamic(1920, 1080) }} 1920w,
            {{ image.src|resizeDynamic(1440, 810) }} 1440w,
            {{ image.src|resizeDynamic(1024, 576) }} 1024w,
            {{ image.src|resizeDynamic(768, 432) }} 768w,
            {{ image.src|resizeDynamic(375, 211) }} 375w"
          data-sizes="auto"
          alt="{{ image.alt|e }}"> #}
      {% endif %}
      {% if image.title or image.caption %}
        <div class="hidden py-[5px]">
          <figcaption class="font-bodySmall">{{ image.title|e }}</figcaption>
          <figcaption class="font-bodySmall underline underline-offset-4">{{ image.caption|e }}</figcaption>
        </div>
      {% endif %}
    </figure>
  </div>
</flynt-component>
