<flynt-component 
  load:on="visible" 
  name="BlockForms"
  class="{% if options.firstComponent %}pt-[10vw] md:pt-[160px]{% endif %}"
  style="
    background-color: {% if options.colorBackground %}{{ options.colorBackground }}{% else %}transparent{% endif %};"
  >
  <div class="boxed !pt-min !pb-[22.5px] lg:!py-[22.5px] w-full fade-in">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-sm lg:gap-xs align-start justify-start lg:justify-between {% if options.stickyTitle %}stickyTitle{% endif %}">
      <div class="column flex {{ colStart }} {{ colEnd }} lg:row-start-1 lg:row-end-2">
        <div class="flex flex-col w-full">
          <div class="wysiwyg">{{ formHtml|raw }}</div>
        </div>
      </div>
    </div>
  </div>
</flynt-component> 