<flynt-component
  load:on="visible" name="HeroHeaderHome"
  class="w-full lg:w-screen h-screen mx-auto relative">
  {% if image %}
    <img 
      class="hidden lg:block figure-image lazyload w-full h-full object-cover"
      src="{{ image.src }}"
      alt="{{ image.alt|e | default('') }}"
      loading="lazy"
      style="opacity: 0; transition: opacity 0.5s ease-in-out;"
      onload="this.style.opacity='1'"
    />
  {% endif %}
  {% if imageMobile %}
    <img 
      class="block lg:hidden figure-image lazyload w-full h-full object-cover"
